global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http-in
    bind *:80 
    bind *:443 ssl crt /etc/letsencrypt/live/www.christineonline.tech/fullchain.pem
    mode http
    default_backend web-backend

frontend https-frontend
    bind *:443 ssl crt /etc/letsencrypt/live/www.christineonline.tech/fullchain.pem
    mode http
    default_backend web-backend

backend web-backend
    balance roundrobin
    server web-01 54.90.233.117 check
    server web-02 3.89.247.11 check
